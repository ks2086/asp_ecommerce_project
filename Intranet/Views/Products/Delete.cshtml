@using Data.Models;
@model Intranet.Models.ProductModelsAggregation;

@{
    var item = ViewData["Item"] as Product;
}

<h4 class="module-title">Aktualizuj produkt</h4>
<div class="row">

    <div class="col s3">
        @await Html.PartialAsync("PartialViews/EcommerceMainMenu")
    </div>

    <div class="col s9">
        <form asp-action="Remove">
            <input type="hidden" name="Id" value="@item.Id.ToString()" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="row">

                <p>Potwierdź usunięcie tego produktu</p>

                <div class="input-field col s12">
                    <button class="btn waves-effect waves-red red" type="submit" name="action">
                        Potwierdzam, usuń
                    </button>
                </div>
            </div>

        </form>
    </div>

</div>
