@using Data.Models;
@model Data.Models.Promotion;

<h4 class="module-title">Edytuj promocję</h4>
<div class="row">

    <div class="col s3">
        @await Html.PartialAsync("PartialViews/EcommerceMainMenu")
    </div>

    <div class="col s9">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="Id" value="@ViewData["Id"]" />

            <div class="row">

                <div class="row">
                    <div class="col s8">
                        <div class="input-field col s12">
                            <input type="text" asp-for=Title name="Title" data-length="255" required>
                            <label>Podaj nazwę promocji</label>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col s4">
                        <div class="input-field col s12">
                            <input type="number" asp-for=Value min="0" max="100" step="1" name="Value" data-length="255" required>
                            <label>Podaj wartość % prmocji</label>
                            <span asp-validation-for="Value" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col s6">
                        <div class="input-field col s12">
                            <input type="text" asp-for=Start_at class="datepicker" name="Starts_at" data-length="255" required>
                            <label>Wybierz datę rozpoczęcia promocji</label>
                            <span asp-validation-for="Start_at" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col s6">
                        <div class="input-field col s12">
                            <input type="text" asp-for=Ends_at class="datepicker" name="Ends_at" data-length="255" required>
                            <label>Wybierz datę zakończenia promocji</label>
                            <span asp-validation-for="Ends_at" class="text-danger"></span>
                        </div>
                    </div>
                </div>


                <div class="input-field col s12">
                    <button class="btn waves-effect waves-light" type="submit" name="action">
                        Zapisz i wróć do listy kategorii
                    </button>
                </div>
            </div>

        </form>
    </div>

</div>