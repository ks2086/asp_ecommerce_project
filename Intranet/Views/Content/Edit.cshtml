@using Data.Models;
@model Data.Models.ContentModel;
@{
    ViewData["Title"] = "Home Page";
}

<div>

    <form asp-action="Update">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" name="Id" value="@ViewData["Id"]" />

        <h4 class="module-title">Edytuj materiał  (Moduł: <strong>@ViewData["type"]</strong>)</h4>

        <div class="row">

            <div class="input-field col s12">
                <input id="input_text" type="text" asp-for="Title" name="Title" data-length="255" required>
                <label asp-for="Title" class="control-label"></label>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="input-field col s12">

                <textarea name="text" asp-for="Text"></textarea>
                <script>
                    CKEDITOR.replace('text');
                </script>

                <span asp-validation-for="Text" class="text-danger"></span>
            </div>

            <div class="input-field col s12">
                <button class="btn waves-effect waves-light" type="submit" name="action">
                    Zapisz i wróć do listy materiałów
                </button>
            </div>
        </div>

    </form>




</div>
