@using Data.Models;
@{
    ViewData["Title"] = "Home Page";
}

<div>

    <h4 class="module-title">Lista treści w portalu (Moduł: <strong>@ViewData["type"]</strong>)</h4>
    <div class="row">
        <div class="col s3">
            @await Component.InvokeAsync("ContentTypesComponent")
        </div>
        <div class="col s9">
            <a href="/Content/Create?type=@ViewData["type"]" class="waves-effect waves-teal btn-flat">Dodaj nową pozycję</a>
            <hr/>
            @if (ViewData["items"] != null && (ViewData["items"] as IEnumerable<object>)?.Any() == true)
            {
                <table>
                    <thead>
                        <tr>
                            <th>Tytuł</th>
                            <th>Data dodania</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var type in (List<ContentModel>)ViewData["items"])
                        {
                            <tr>
                                <td>@type.Title</td>
                                <td>@type.Created_at</td>
                                <td><a href="/Content/Edit?id=@type.Id" class="waves-effect waves-teal btn-flat">Edycja</a></td>
                                <td><a href="/Content/Delete?id=@type.Id" class="waves-effect waves-red btn-flat red">Usuń</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>Brak treści do wyświetlenia</p>
            }
        </div>
    </div>
    

   

</div>
