@using Data.Models;
@using System.Text.Encodings.Web
@using System.Web
@{
    var searchar = ViewData["Searchbar"] as ContentModel;
    string decodedText = HttpUtility.HtmlDecode(searchar.Text);
}
<div class="searchBar p-4 bg-dark">
    <div class="container">
        <h3>@searchar.Title</h3>
        <form asp-controller="Search" asp-action="Index" method="get"> 
            <div class="input-group">
            
                    <input type="text" name="query" id="searchInput" class="form-control" placeholder="Wpisz wyszukiwaną frazę" required>
                    <button class="btn btn-outline-warning" type="submit">Szukaj</button>
           
            </div>
            <div class="searchResults"></div>
         </form>
        <p>@Html.Raw(decodedText)</p> 
    </div>
</div>
